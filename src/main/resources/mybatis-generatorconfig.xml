<!--        <table tableName="user" domainObjectName="User"></table>-->
<!--        <table tableName="volunteer" domainObjectName="Volunteer"></table>-->
        <table tableName="acticle" domainObjectName="Acticle"></table>
        <table tableName="task" domainObjectName="Task"></table>
<!--        <table tableName="taskstatus" domainObjectName="Taskstatus"></table>-->
<!--        <table tableName="user" domainObjectName="User"></table>-->


    </context>
</generatorConfiguration>